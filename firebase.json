{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/tools/url-parser/**",
        "destination": "/tools/url-parser/index.html"
      },
      {
        "source": "/tools/json-formatter/**",
        "destination": "/tools/json-formatter/index.html"
      },
      {
        "source": "/tools/color-picker/**",
        "destination": "/tools/color-picker/index.html"
      },
      {
        "source": "/tools/encoder-decoder/**",
        "destination": "/tools/encoder-decoder/index.html"
      },
      {
        "source": "**",
        "destination": "/404.html"
      }
    ]
  }
}
